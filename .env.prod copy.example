# ---------- Core ----------
INTERFACE_MODE=api
UI_TEST=true
AGORA_API_HOST=0.0.0.0
AGORA_API_PORT=8000
AGORA_LOG_LEVEL=WARNING

# ---------- Database ----------
POSTGRES_DB=agora
POSTGRES_USER=agora_user
POSTGRES_PASSWORD=change_me_strong_password
DATABASE_URL=postgresql://agora_user:change_me_strong_password@postgres:5432/agora

# ---------- Game ----------
MAX_TURNS=20
NUM_ACTORS=3
CHAR_CONTEXT_MESSAGES=12
OBSERVER_CONTEXT_MESSAGES=10
AGORA_MAX_MESSAGES_BEFORE_USER=1
OBSERVER_PARALLEL_EVAL=true
OBSERVER_ENABLE_NON_USER_CONTINUATION=false
AGORA_STREAM_CHARACTER=yes
AGORA_STREAM_GUIONISTA=no

# ---------- LLM ----------
DEEPSEEK_API_KEY=change_me
DEEPSEEK_INPUT_COST_PER_1M_TOKENS=0.28
DEEPSEEK_OUTPUT_COST_PER_1M_TOKENS=1.10

# ---------- Auth ----------
AUTH_REQUIRED=true
AUTH_ALGORITHM=HS256
AUTH_TOKEN_EXPIRE_MINUTES=480
AUTH_COOKIE_NAME=agora_auth_token
AUTH_SEED_USERNAME=usuario
AUTH_SEED_PASSWORD=change_me_seed_password

# ---------- Langfuse (optional) ----------
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
